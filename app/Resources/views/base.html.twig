        </div>
    </div>
    <!-- fin bare decherche -->
    <!-- tuile news -->
    <div class="grid row">
      {#  { for equipe in equipes %}  #}
            <a class="aNews" href="{# path('#', { 'id': # }) #}">
                <div class="element-item bleu grid-sizer carteNews">
                    <div class="carteContent">
                        <div class="topCarte">
                            <div class="NewsRightCarte">
                                <div class="NewsName text-center row panelimg">
                                    <p>img</p>

                                </div>
                            </div>
                        </div>
                        <div class="bottomCarte">
                            <div class="NewsLeftCarte row">
                                <div class="col-lg-12 text-center infoNews">
                                    <ul>
                                        <li><h2 class="col-lg-12 nomNews">{# equipe.nomEquipe #} tralala</h2></li>
                                        <li class="textNews"><i class="fa fa-user" aria-hidden="true"></i>nom prénom</li>
                                        <li class="textNews"><a href="mailto:{# equipe.emailReferent #}#"><i class="fa fa-envelope" aria-hidden="true"></i>Email du référent</a></li>
                                        <li class="textNews"><a href="{# equipe.siteWebEquipe #}" target="_blank"><i class="fa fa-flask" aria-hidden="true"></i>Site Web du laboratoire</a></li>
                                    </ul>
                                </div>
                                <div class="col-lg-12">
                                    <ul class="list-unstyled list-inline motclef">
                                    {#    {%  for k in equipe.keywordsEquipe %}  #}
                                            <li>
                                                {# motclef #}mot clef
                                            </li>
                                        {#  {% endfor %}  #}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
      {#  {% endfor %}  #}
    </div>
    <!-- fin tuile news -->




    <script>
        // quick search regex
        var qsRegex;

        // init Isotope
        var $grid = $('.grid').isotope({
            itemSelector: '.element-item',
            layoutMode: 'fitRows',
            filter: function() {
                return qsRegex ? $(this).text().match( qsRegex ) : true;
            }
        });

        // use value of search field to filter
        var $quicksearch = $('.quicksearch').keyup( debounce( function() {
            qsRegex = new RegExp( $quicksearch.val(), 'gi' );
            $grid.isotope();
        }, 200 ) );

        // debounce so filtering doesn't happen every millisecond
        function debounce( fn, threshold ) {
            var timeout;
            return function debounced() {
                if ( timeout ) {
                    clearTimeout( timeout );
                }
                function delayed() {
                    fn();
                    timeout = null;
                }
                timeout = setTimeout( delayed, threshold || 100 );
            }
        }

    </script>
</body>
