{% block head %}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="description" content="HubAgri">
    <link rel="stylesheet" href="{{ asset('font-awesome-4.6.3/css/font-awesome.min.css')}}">
    <link rel="stylesheet" href="{{ asset('style/bootstrap/css/bootstrap.css')}}">
    <link rel="stylesheet" href="{{ asset('style/jquery-ui-1.12.1/jquery-ui.min.css') }}">
    <link rel="stylesheet" href="{{ asset('dist/summernote.css')}}">
    <link rel="stylesheet" href="{{ asset('style/style.css')}}">
    <link rel="icon" type="image/png" href="{{ asset("#") }}">
    <script src="{{ asset('style/jquery/jquery-3.1.1.min.js')}}"></script>
    <script src="{{ asset('js/jquery.tablesorter/jquery.tablesorter.min.js')}}"></script>
    <script src="{{ asset('style/bootstrap/js/bootstrap.min.js')}}"></script>
    <script src="{{ asset('style/jquery-ui-1.12.1/jquery-ui.js') }}"></script>
    <script src="{{ asset('js/custom.js')}}"></script>
    <script src="{{ asset('dist/summernote.min.js')}}"></script>
    <script src="{{ asset('style/js/masonry.pkgd.min.js') }}"></script>
    <script src="{{ asset('style/js/isotope.pkgd.min.js') }}"></script>
    <title>HubAgri</title>
</head>
{% endblock %}
<body>
<!-- Barre de recherche -->
    <div class="container-fluid">
        <div class="row">
            <div class="accueilBandeau">
                <a class="logo href="{{ path('accueil') }}"> <img src="{{ asset('image/imgDefault.png')}}" alt="" class="img-responsive logo" /> </a>
            </div>
            <div class="col-lg-offset-8 col-lg-4">
                <ul class="nav navbar-nav "id="glyph">
                    <li><a href="#"><span class="glyphicon glyphicon-envelope"></span> Alert</a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-user"></span> S'identifier</a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> S'enregistrer</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <div id="custom-search-input">
            <div class="input-group">
                <input id="search" type="text" class="quicksearch form-control input-lg" placeholder="Rechercher par équipes, mot-clefs, référents ..." />
                <span class="input-group-btn">
                        <button class="btn btn-info btn-lg" type="button">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </span>
            </div>
        </div>
        <!-- fin bare decherche -->
        <!-- tuile news -->
        <div class="grid row">
            {% for article in articles %}
                <a class="aNews" href="{# path('#', { 'id': # }) #}">
                    <div class="element-item bleu grid-sizer carteEquipe">
                        <div class="carteContent">
                            <div class="topCarte">
                                <div class="equipeRightCarte">
                                    <div class="equipeName text-center row panelimg">
                                        {{ article.nom }}
                                        {{ article.titre }}
                                    </div>
                                </div>
                            </div>
                            <div class="bottomCarte">
                                <div class="equipeLeftCarte row">
                                    <div class="col-lg-12 text-center infoEquipe">

                                            <h2 class="col-lg-12 nomEquipe"></h2>


                                    </div>
                                    <div class="col-lg-12">
                                        <ul class="list-unstyled list-inline motclef">

                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            {% endfor %}

        </div>
    </div>
<!-- fin tuile news -->




<script>
    // quick search regex
    var qsRegex;

    // init Isotope
    var $grid = $('.grid').isotope({
        itemSelector: '.element-item',
        layoutMode: 'fitRows',
        filter: function() {
            return qsRegex ? $(this).text().match( qsRegex ) : true;
        }
    });

    // use value of search field to filter
    var $quicksearch = $('.quicksearch').keyup( debounce( function() {
        qsRegex = new RegExp( $quicksearch.val(), 'gi' );
        $grid.isotope();
    }, 200 ) );

    // debounce so filtering doesn't happen every millisecond
    function debounce( fn, threshold ) {
        var timeout;
        return function debounced() {
            if ( timeout ) {
                clearTimeout( timeout );
            }
            function delayed() {
                fn();
                timeout = null;
            }
            timeout = setTimeout( delayed, threshold || 100 );
        }
    }

</script>
</body>
</html>
