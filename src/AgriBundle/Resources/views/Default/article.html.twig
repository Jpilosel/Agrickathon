<body>
<!-- Barre de recherche -->
    <div class="container">
        <div id="custom-search-input">
            <div class="input-group">
                <input id="search" type="text" class="quicksearch form-control input-lg" placeholder="Rechercher par équipes, mot-clefs, référents ..." />
                <span class="input-group-btn">
